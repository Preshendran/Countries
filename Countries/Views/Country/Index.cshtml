@model IEnumerable<RESTCountries.Models.Country>


<div><b>Countries</b><br /></div>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Country Name</th>
        <th>Country Region</th>
        <th>Country subregion</th>
        
    </tr>
    @foreach (var country in Model)
    {
        <tr>
            <td asp-controller="Country" asp-action="Country" asp-route-id="@country.Alpha3Code">@country.Name</td>
            <td>@country.Region</td>
            <td>@country.Subregion</td>
        </tr>

    }
</table>  