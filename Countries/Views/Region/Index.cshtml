@model Region


<div><b>Region</b><br /></div>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Region Name</th>
        <th>Total Population</th>
        <th>Countries in region</th>
        <th>Subregions</th>
    </tr>

    <tr>
        <td>@Model.RegionName</td>
        <td>@Model.TotalPopulation</td>
        <td>
            @foreach (var country in Model.CountriesInRegion)
            {
                <a href="Country/@country.Alpha3Code">@country.Name</a> <br>
            }
        </td>

        <td>
            @foreach (var subregion in Model.Subregions)
            {
                <a href="">@subregion.ToString()</a> <br>
            }
        </td>


    </tr>


</table>  